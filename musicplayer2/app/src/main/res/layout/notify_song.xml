<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/notify_song_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/default_music"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notify_song_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="歌曲名"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/notify_song_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="歌手名"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:gravity="center_vertical">
        <ImageButton
            android:id="@+id/notify_song_pre"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/previous_song"/>

        <ImageButton
            android:id="@+id/notify_song_play_pause"
            android:layout_marginStart="10dp"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/play_song"/>

        <ImageButton
            android:id="@+id/notify_song_next"
            android:layout_marginStart="10dp"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/next_song"/>
    </LinearLayout>

</LinearLayout>