<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

<FrameLayout
    android:id="@+id/fragment_container"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_weight="60"/>

<LinearLayout
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="wrap_content"
    android:layout_weight="8"
    android:id="@+id/button_panel">
    <ImageButton
        android:id="@+id/previous_song_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/previous_song"
        android:layout_weight="1"
        />
    <ImageButton
        android:id="@+id/play_and_pause_song_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/play_song"
        android:layout_weight="1"
        />
    <ImageButton
        android:id="@+id/next_song_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/next_song"
        android:layout_weight="1"
        />
</LinearLayout>
</LinearLayout>